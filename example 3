#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	float a,b,c;
	printf("enter three numbers :");
	fflush(stdin); fflush(stdout);
	scanf("%f%f%f",&a,&b,&c);
	if(a>=b && a>=c)
		printf("largest number =%.2f",a);
	else if (b>=a && a>=c)
		printf("largest number =%.2f",b);
	else
		printf("largest number =%.2f",c);
	return 0;




}
