#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	float num;
	printf("enter the number :");
	fflush(stdin); fflush(stdout);
	scanf("%f",&num);
	if (num<0)
		printf("%.1f is negative",num);
	else if (num>0)
		printf("%.1f is positive",num);
	else
		printf(" %f = zero result :(  ");
return 0;
}
